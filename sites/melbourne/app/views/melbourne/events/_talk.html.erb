<div class="flex flex-col gap-2 border-l-4 pl-4 border-[#0D37F2]">
  <h4 class="text-xl font-semibold text-black"><%= talk.title %></h4>
  <p class="text-black"><%= talk.description %></p>

  <div class="grid grid-cols-2 gap-4 mt-1 w-full">
    <% talk.speakers.each do |speaker| %>
      <div class="flex flex-row gap-2 items-center w-full">
        <img class="overflow-hidden w-12 h-12 rounded-full border-2 border-white shadow" src="https://ca.slack-edge.com/T05MR1HN2U9-U06LYG9KCJ3-66c5ce0cf7a3-512" alt="Juli">
        <div class="flex flex-col">
          <p class="font-medium leading-5 text-black"><%= speaker.name %></p>
          <p class="text-sm leading-5 text-gray-600">The Best Engineer, Buildkite</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
