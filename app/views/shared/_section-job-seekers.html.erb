<% job_seekers = User.seeking_work.includes(:memberships).where(memberships: { left_at: nil }).order(created_at: :desc).limit(9) %>

<% if job_seekers.any? %>
  <section id="job-seekers" class="py-12 sm:py-16 md:py-20">
    <div class="max-w-sm sm:max-w-xl md:max-w-3xl lg:max-w-5xl mx-auto px-4 sm:px-6 md:px-8">
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-8 sm:mb-10 text-gray-900 text-center">
        Members Seeking Work
      </h2>

      <div class="text-center mb-8">
        <p class="text-gray-700 mb-4">These members of Ruby Australia are currently seeking new opportunities.</p>
        <p class="text-gray-700">
          <% if user_signed_in? %>
            Visit your <%= link_to "profile settings", edit_my_details_path, class: "text-ruby-red hover:text-red-700 underline" %> to add your LinkedIn profile and mark yourself as seeking work.
          <% else %>
            <%= link_to "Sign up", new_user_registration_path, class: "text-ruby-red hover:text-red-700 underline" %> or <%= link_to "log in", new_user_session_path, class: "text-ruby-red hover:text-red-700 underline" %> to add yourself to this list.
          <% end %>
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
        <% job_seekers.each do |user| %>
          <div class="bg-gray-50 p-6 rounded-lg shadow-sm border border-gray-200 flex flex-col">
            <div class="flex items-center">
              <div class="w-6 h-6 mr-2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" fill="currentColor" class="text-ruby-red">
                  <path d="M416 32H31.9C14.3 32 0 46.5 0 64.3v383.4C0 465.5 14.3 480 31.9 480H416c17.6 0 32-14.5 32-32.3V64.3c0-17.8-14.4-32.3-32-32.3zM135.4 416H69V202.2h66.5V416zm-33.2-243c-21.3 0-38.5-17.3-38.5-38.5S80.9 96 102.2 96c21.2 0 38.5 17.3 38.5 38.5 0 21.3-17.2 38.5-38.5 38.5zm282.1 243h-66.4V312c0-24.8-.5-56.7-34.5-56.7-34.6 0-39.9 27-39.9 54.9V416h-66.4V202.2h63.7v29.2h.9c8.9-16.8 30.6-34.5 62.9-34.5 67.2 0 79.7 44.3 79.7 101.9V416z"/>
                </svg>
              </div>
              <a href="<%= user.linkedin_url %>" target="_blank" rel="noopener noreferrer" class="text-ruby-red hover:text-red-700 transition-colors truncate flex-1">
                View <%= user.full_name %>
              </a>
            </div>
          </div>
        <% end %>
      </div>

      <% if job_seekers.count >= 9 %>
        <div class="text-center mt-8">
          <p class="text-gray-600">
            Showing the most recent 9 members seeking work. More members may be available.
          </p>
        </div>
      <% end %>
    </div>
  </section>
<% end %>
