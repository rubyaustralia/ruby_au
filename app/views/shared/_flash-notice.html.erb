<div id="flash" class="fixed bottom-4 sm:bottom-6 md:bottom-8 right-4 sm:right-6 md:right-8 w-[calc(100%-2rem)] sm:w-96 md:w-[28rem] z-50 flex flex-col gap-3 pointer-events-none">
  <% flash.each do |key, value| %>
    <div class="flash <%= key %> flex items-start p-4 sm:p-5 rounded-lg shadow-lg backdrop-blur-sm animate-slideInRight transition-opacity duration-300 opacity-95 hover:opacity-100 pointer-events-auto">
      <% if key == "notice" %>
        <div class="bg-green-100 text-green-700 border border-green-200 rounded-lg p-4 sm:p-5 w-full">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <i data-lucide="check-circle" class="h-5 w-5 sm:h-6 sm:w-6 text-green-500"></i>
            </div>
            <div class="ml-3 sm:ml-4 flex-1 pt-0.5">
              <p class="text-sm sm:text-base font-medium text-green-800"><%= value %></p>
            </div>
            <button type="button" class="ml-3 flex-shrink-0 text-green-500 hover:text-green-700 focus:outline-none" onclick="this.parentElement.parentElement.remove()">
              <i data-lucide="x" class="h-4 w-4 sm:h-5 sm:w-5"></i>
            </button>
          </div>
        </div>
      <% elsif key == "alert" || key == "error" %>
        <div class="bg-red-100 text-red-700 border border-red-200 rounded-lg p-4 sm:p-5 w-full">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <i data-lucide="alert-triangle" class="h-5 w-5 sm:h-6 sm:w-6 text-red-500"></i>
            </div>
            <div class="ml-3 sm:ml-4 flex-1 pt-0.5">
              <p class="text-sm sm:text-base font-medium text-red-800"><%= value %></p>
            </div>
            <button type="button" class="ml-3 flex-shrink-0 text-red-500 hover:text-red-700 focus:outline-none" onclick="this.parentElement.parentElement.remove()">
              <i data-lucide="x" class="h-4 w-4 sm:h-5 sm:w-5"></i>
            </button>
          </div>
        </div>
      <% elsif key == "warning" %>
        <div class="bg-amber-100 text-amber-700 border border-amber-200 rounded-lg p-4 sm:p-5 w-full">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <i data-lucide="alert-circle" class="h-5 w-5 sm:h-6 sm:w-6 text-amber-500"></i>
            </div>
            <div class="ml-3 sm:ml-4 flex-1 pt-0.5">
              <p class="text-sm sm:text-base font-medium text-amber-800"><%= value %></p>
            </div>
            <button type="button" class="ml-3 flex-shrink-0 text-amber-500 hover:text-amber-700 focus:outline-none" onclick="this.parentElement.parentElement.remove()">
              <i data-lucide="x" class="h-4 w-4 sm:h-5 sm:w-5"></i>
            </button>
          </div>
        </div>
      <% else %>
        <div class="bg-blue-100 text-blue-700 border border-blue-200 rounded-lg p-4 sm:p-5 w-full">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <i data-lucide="info" class="h-5 w-5 sm:h-6 sm:w-6 text-blue-500"></i>
            </div>
            <div class="ml-3 sm:ml-4 flex-1 pt-0.5">
              <p class="text-sm sm:text-base font-medium text-blue-800"><%= value %></p>
            </div>
            <button type="button" class="ml-3 flex-shrink-0 text-blue-500 hover:text-blue-700 focus:outline-none" onclick="this.parentElement.parentElement.remove()">
              <i data-lucide="x" class="h-4 w-4 sm:h-5 sm:w-5"></i>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<style>
  @keyframes slideInRight {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 0.95;
    }
  }

  .animate-slideInRight {
    animation: slideInRight 0.3s ease-out forwards;
  }

  .flash {
    animation: slideInRight 0.3s ease-out forwards, fadeOut 0.5s ease-in forwards 3s;
  }

  @keyframes fadeOut {
    from {
      opacity: 0.95;
    }
    to {
      opacity: 0;
      display: none;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    setTimeout(function() {
      const flashContainer = document.getElementById('flash');
      if (flashContainer) {
        const messages = flashContainer.querySelectorAll('.flash');
        messages.forEach(function(message) {
          setTimeout(function() {
            message.remove();
          }, 3500); // 3 seconds + 0.5s for fade out animation
        });
      }
    }, 100);
  });
</script>
