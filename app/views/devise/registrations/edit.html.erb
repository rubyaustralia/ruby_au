<div class="max-w-xs sm:max-w-xl md:max-w-2xl lg:max-w-3xl mx-auto px-4 sm:px-6 md:px-8 py-8 sm:py-12 md:py-16">
  <div class="bg-white rounded-lg shadow-md p-6 sm:p-8 md:p-10">
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-6 sm:mb-8 pb-3 border-b border-gray-200">
      Edit Your Profile
    </h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="grid grid-cols-1 sm:grid-cols-4 gap-4 sm:gap-6 items-start">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 sm:text-right sm:mt-2" %>
        <div class="sm:col-span-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
                            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-ruby-red focus:border-ruby-red" %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p class="mt-2 text-sm text-amber-600">
              Currently waiting confirmation for: <%= resource.unconfirmed_email %>
            </p>
          <% end %>
        </div>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-4 gap-4 sm:gap-6 items-start">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 sm:text-right sm:mt-2" %>
        <div class="sm:col-span-3">
          <%= f.password_field :password, autocomplete: "new-password",
                               class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-ruby-red focus:border-ruby-red" %>
          <p class="mt-1 text-xs sm:text-sm text-gray-500">
            Leave blank if you don't want to change it
          </p>
        </div>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-4 gap-4 sm:gap-6 items-start">
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 sm:text-right sm:mt-2" %>
        <div class="sm:col-span-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
                               class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-ruby-red focus:border-ruby-red" %>
        </div>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-4 gap-4 sm:gap-6 items-start">
        <%= f.label :current_password, class: "block text-sm font-medium text-gray-700 sm:text-right sm:mt-2 after:content-['*'] after:ml-0.5 after:text-red-500" %>
        <div class="sm:col-span-3">
          <%= f.password_field :current_password, autocomplete: "current-password",
                               class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-ruby-red focus:border-ruby-red" %>
          <p class="mt-1 text-xs sm:text-sm text-gray-500">
            We need your current password to confirm your changes
          </p>
        </div>
      </div>

      <div class="mt-8 sm:mt-10 pt-4 border-t border-gray-200 flex flex-col sm:flex-row gap-4 justify-center sm:justify-start">
        <%= f.submit "Update Profile",
                     class: "inline-flex justify-center py-2 px-4 sm:py-2.5 sm:px-5 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-ruby-red hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-ruby-red transition-colors" %>

        <%= link_to "Cancel", :back,
                    class: "inline-flex justify-center py-2 px-4 sm:py-2.5 sm:px-5 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-ruby-red transition-colors" %>
      </div>
    <% end %>

    <!-- Account Deletion Section -->
    <div class="mt-12 sm:mt-16 pt-6 border-t border-gray-200">
      <h2 class="text-xl font-bold text-gray-900 mb-4">Delete Account</h2>

      <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-md mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-red-700">
              This action is permanent. Once your account is deleted, all of your data will be permanently removed.
            </p>
          </div>
        </div>
      </div>

      <div class="flex flex-col sm:flex-row sm:items-center gap-4">
        <div class="flex-grow">
          <p class="text-sm text-gray-500">
            If you want to permanently delete your account and all associated data, you can do so by clicking the button.
          </p>
        </div>

        <%= button_to "Delete Account",
                      registration_path(resource_name),
                      method: :delete,
                      data: { turbo_confirm: "Are you sure you want to delete your account? This action cannot be undone." },
                      class: "inline-flex items-center justify-center py-2 px-4 sm:py-2.5 sm:px-5 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors" %>
      </div>
    </div>
  </div>
</div>
