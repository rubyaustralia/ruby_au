<div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-10 md:py-12">
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="px-4 sm:px-6 md:px-8 py-5 sm:py-6 bg-gray-50 border-b border-gray-200">
      <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900">New Nomination</h1>
    </div>

    <div class="px-4 sm:px-6 md:px-8 py-6 sm:py-8">
      <%= render "form", nomination: @nomination %>

      <div class="mt-8 flex flex-col sm:flex-row sm:items-center gap-4">
        <%= link_to admin_election_path(@election), class: "group inline-flex items-center justify-center text-gray-700 hover:text-ruby-red transition-colors text-sm sm:text-base" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to election
        <% end %>
      </div>
    </div>
  </div>
</div>
