<div class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
  <div class="mb-8 sm:mb-10 md:mb-12">
    <h2 class="text-xl sm:text-2xl md:text-3xl font-semibold text-gray-800 mb-4 sm:mb-6">Ruby Australia Members</h2>

    <p class="text-gray-600 text-sm sm:text-base mb-6">
      Showing <%= members.size %> of <%= members.total_count %> total members
    </p>
  </div>

  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead>
        <tr class="bg-ruby-red text-white text-left">
          <th class="py-3 px-4 sm:px-6 font-medium text-sm sm:text-base">Name</th>
          <th class="py-3 px-4 sm:px-6 font-medium text-sm sm:text-base">Email</th>
          <th class="py-3 px-4 sm:px-6 font-medium text-sm sm:text-base">Address</th>
        </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
        <% members.each do |member| %>
          <tr class="hover:bg-gray-50 transition-colors">
            <td class="py-4 px-4 sm:px-6 text-sm sm:text-base">
              <div class="font-medium text-gray-900"><%= member.full_name %></div>
            </td>
            <td class="py-4 px-4 sm:px-6 text-sm sm:text-base">
              <a href="mailto:<%= member.email %>" class="text-ruby-red hover:text-red-700 transition-colors">
                <%= member.email %>
              </a>
            </td>
            <td class="py-4 px-4 sm:px-6 text-sm sm:text-base text-gray-600 max-w-xs sm:max-w-sm md:max-w-md">
              <div class="whitespace-pre-line">
                <%= escape_once(member.address.to_s).gsub("\n", "<br />").html_safe %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <% if members.total_pages > 1 %>
      <div class="border-t border-gray-200 bg-gray-50 px-4 sm:px-6 py-3 sm:py-4 flex justify-between items-center flex-wrap gap-4">
        <div class="text-sm text-gray-500">
          Showing page <%= members.current_page %> of <%= members.total_pages %>
        </div>
        <div class="pagination-container">
          <%= paginate members, class: "pagination flex gap-2" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
