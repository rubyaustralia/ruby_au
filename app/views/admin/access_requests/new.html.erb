<div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8 lg:py-10">
  <div class="mb-6 sm:mb-8">
    <nav class="flex" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1 md:space-x-2">
        <li class="inline-flex items-center">
          <%= link_to admin_access_requests_path, class: "inline-flex items-center text-sm text-gray-500 hover:text-ruby-red" do %>
            <i data-lucide="home" class="w-4 h-4 mr-2"></i>
            Access Requests
          <% end %>
        </li>
        <li>
          <div class="flex items-center">
            <i data-lucide="chevron-right" class="w-4 h-4 text-gray-400"></i>
            <span class="ml-1 md:ml-2 text-sm font-medium text-gray-700">New Request</span>
          </div>
        </li>
      </ol>
    </nav>

    <div class="mt-2 flex flex-col sm:flex-row sm:items-center sm:justify-between">
      <h2 class="text-xl sm:text-2xl lg:text-3xl font-bold text-gray-900">Create New Access Request</h2>

      <div class="mt-4 sm:mt-0">
        <%= link_to admin_access_requests_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-ruby-red transition-colors" do %>
          <i data-lucide="arrow-left" class="w-4 h-4 mr-1"></i>
          <span>Back to list</span>
        <% end %>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden mb-8 sm:mb-10">
    <%= render partial: "form" %>
  </div>

  <!-- Guidelines section -->
  <div class="mt-8 rounded-lg border border-gray-200 overflow-hidden bg-gray-50">
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
      <div class="flex items-center">
        <i data-lucide="help-circle" class="h-5 w-5 text-gray-500 mr-2"></i>
        <h3 class="text-lg leading-6 font-medium text-gray-900">Guidelines for Access Requests</h3>
      </div>
    </div>
    <div class="px-4 py-5 sm:p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 sm:gap-8">
        <div>
          <h4 class="text-base sm:text-lg font-medium text-gray-900 mb-2">When to Create an Access Request</h4>
          <ul class="space-y-2 text-sm sm:text-base text-gray-600 list-disc pl-5">
            <li>For committee members requiring access to the member registry</li>
            <li>For external parties with legitimate needs (auditors, legal representatives)</li>
            <li>For special event coordination requiring member information</li>
            <li>When registry information is needed for official communications</li>
          </ul>
        </div>
        <div>
          <h4 class="text-base sm:text-lg font-medium text-gray-900 mb-2">Important Information</h4>
          <ul class="space-y-2 text-sm sm:text-base text-gray-600 list-disc pl-5">
            <li>All registry access is logged and monitored</li>
            <li>Member data must be handled according to our privacy policy</li>
            <li>Access is temporary and will be revoked after purpose is fulfilled</li>
            <li>Required fields are marked with an asterisk (*)</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick actions -->
  <div class="mt-8 flex justify-center sm:justify-start space-x-4">
    <%= link_to admin_access_requests_path, class: "inline-flex items-center justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-ruby-red transition-colors" do %>
      <i data-lucide="list" class="w-4 h-4 mr-1.5"></i>
      <span>View All Requests</span>
    <% end %>

    <%= link_to "#", class: "inline-flex items-center justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-ruby-red transition-colors" do %>
      <i data-lucide="user" class="w-4 h-4 mr-1.5"></i>
      <span>View Member Directory</span>
    <% end %>
  </div>
</div>
