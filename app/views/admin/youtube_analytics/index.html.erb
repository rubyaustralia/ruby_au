<% content_for :page_title, "YouTube Analytics" %>

<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center py-4 space-y-4 sm:space-y-0">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">YouTube Analytics</h1>
          <p class="text-sm text-gray-600">Track channel performance and growth</p>
        </div>
        <div class="flex flex-col sm:flex-row items-start sm:items-center space-y-2 sm:space-y-0 sm:space-x-4 w-full sm:w-auto">
          <select class="w-full sm:w-auto border border-gray-300 rounded-md px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
            <option>Last 30 days</option>
            <option>Last 7 days</option>
            <option>Last 90 days</option>
            <option>Last year</option>
          </select>
          <button class="w-full sm:w-auto bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
            Export Data
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Key Metrics Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 mb-6 sm:mb-8">
      <!-- Views Card -->
      <div class="bg-white rounded-lg shadow-sm p-4 sm:p-6 border border-gray-200">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Total Views</p>
            <p class="text-xl sm:text-2xl font-bold text-gray-900">
              <%= number_with_delimiter(@analytics_data[:views][:total]) %>
            </p>
          </div>
          <div class="p-2 sm:p-3 bg-blue-50 rounded-full">
            <svg class="w-5 h-5 sm:w-6 sm:h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
          </div>
        </div>
        <div class="mt-3 sm:mt-4">
          <span class="text-sm text-green-600 font-medium">+<%= @analytics_data[:views][:change] %>%</span>
          <span class="text-sm text-gray-500 ml-2">from last month</span>
        </div>
      </div>

      <!-- Subscribers Card -->
      <div class="bg-white rounded-lg shadow-sm p-4 sm:p-6 border border-gray-200">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Subscribers</p>
            <p class="text-xl sm:text-2xl font-bold text-gray-900">
              <%= number_with_delimiter(@analytics_data[:subscribers][:total]) %>
            </p>
          </div>
          <div class="p-2 sm:p-3 bg-green-50 rounded-full">
            <svg class="w-5 h-5 sm:w-6 sm:h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
        </div>
        <div class="mt-3 sm:mt-4">
          <span class="text-sm text-green-600 font-medium">+<%= @analytics_data[:subscribers][:change] %>%</span>
          <span class="text-sm text-gray-500 ml-2">from last month</span>
        </div>
      </div>

      <!-- Watch Time Card -->
      <div class="bg-white rounded-lg shadow-sm p-4 sm:p-6 border border-gray-200">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Watch Time (hours)</p>
            <p class="text-xl sm:text-2xl font-bold text-gray-900">
              <%= number_with_delimiter(@analytics_data[:watch_time][:total]) %>
            </p>
          </div>
          <div class="p-2 sm:p-3 bg-purple-50 rounded-full">
            <svg class="w-5 h-5 sm:w-6 sm:h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <div class="mt-3 sm:mt-4">
          <span class="text-sm text-red-600 font-medium"><%= @analytics_data[:watch_time][:change] %>%</span>
          <span class="text-sm text-gray-500 ml-2">from last month</span>
        </div>
      </div>

      <!-- Revenue Card -->
      <div class="bg-white rounded-lg shadow-sm p-4 sm:p-6 border border-gray-200">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600">Revenue</p>
            <p class="text-xl sm:text-2xl font-bold text-gray-900">
              $<%= number_with_precision(@analytics_data[:revenue][:total], precision: 2) %>
            </p>
          </div>
          <div class="p-2 sm:p-3 bg-yellow-50 rounded-full">
            <svg class="w-5 h-5 sm:w-6 sm:h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
            </svg>
          </div>
        </div>
        <div class="mt-3 sm:mt-4">
          <span class="text-sm text-green-600 font-medium">+<%= @analytics_data[:revenue][:change] %>%</span>
          <span class="text-sm text-gray-500 ml-2">from last month</span>
        </div>
      </div>
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 sm:gap-6 mb-6 sm:mb-8">
      <!-- Views Chart -->
      <div class="lg:col-span-2 bg-white rounded-lg shadow-sm p-4 sm:p-6 border border-gray-200">
        <div class="flex flex-col sm:flex-row sm:items-center justify-between mb-4">
          <h3 class="text-lg font-medium text-gray-900 mb-2 sm:mb-0">Views Over Time</h3>
          <div class="flex space-x-2">
            <button class="text-sm text-blue-600 hover:text-blue-800 font-medium">7D</button>
            <button class="text-sm text-gray-500 hover:text-gray-700">30D</button>
            <button class="text-sm text-gray-500 hover:text-gray-700">90D</button>
          </div>
        </div>
        <div class="h-48 sm:h-64 bg-gray-50 rounded-lg flex items-center justify-center">
          <div class="text-center">
            <div class="w-12 h-12 bg-gray-200 rounded-full flex items-center justify-center mx-auto mb-2">
              <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <p class="text-sm text-gray-500">Chart visualization</p>
            <p class="text-xs text-gray-400">Integrate with charting library</p>
          </div>
        </div>
      </div>

      <!-- Channel Stats -->
      <div class="bg-white rounded-lg shadow-sm p-4 sm:p-6 border border-gray-200">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Channel Stats</h3>
        <div class="space-y-3 sm:space-y-4">
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Total Videos</span>
            <span class="text-sm font-medium text-gray-900"><%= @channel_stats[:total_videos] %></span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Total Playlists</span>
            <span class="text-sm font-medium text-gray-900"><%= @channel_stats[:total_playlists] %></span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Avg. View Duration</span>
            <span class="text-sm font-medium text-gray-900"><%= @channel_stats[:average_view_duration] %></span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Engagement Rate</span>
            <span class="text-sm font-medium text-gray-900"><%= @channel_stats[:engagement_rate] %>%</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Video Performance Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 sm:gap-6">
      <!-- Recent Videos -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="p-4 sm:p-6 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Recent Videos</h3>
        </div>
        <div class="divide-y divide-gray-200">
          <% @recent_videos.each do |video| %>
            <div class="p-4 sm:p-6 hover:bg-gray-50">
              <div class="flex items-start space-x-3 sm:space-x-4">
                <div class="w-12 h-9 sm:w-16 sm:h-12 bg-gray-200 rounded-lg flex-shrink-0 flex items-center justify-center">
                  <svg class="w-4 h-4 sm:w-5 sm:h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1.586a1 1 0 01.707.293l2.414 2.414a1 1 0 00.707.293H15M9 10V9a1 1 0 011-1h4a1 1 0 011 1v1M9 10v5a1 1 0 001 1h4a1 1 0 001-1v-5m-6 0h6"></path>
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <h4 class="text-sm font-medium text-gray-900 truncate"><%= video[:title] %></h4>
                  <p class="text-sm text-gray-500 mt-1"><%= time_ago_in_words(video[:published_at]) %> ago</p>
                  <div class="flex flex-wrap items-center gap-2 sm:gap-4 mt-2">
                    <span class="text-xs text-gray-500"><%= number_with_delimiter(video[:views]) %> views</span>
                    <span class="text-xs text-gray-500"><%= number_with_delimiter(video[:likes]) %> likes</span>
                    <span class="text-xs text-gray-500"><%= number_with_delimiter(video[:comments]) %> comments</span>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Top Performing Videos -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="p-4 sm:p-6 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Top Performing Videos</h3>
        </div>
        <div class="divide-y divide-gray-200">
          <% @top_videos.each do |video| %>
            <div class="p-4 sm:p-6 hover:bg-gray-50">
              <div class="flex items-start space-x-3 sm:space-x-4">
                <div class="w-12 h-9 sm:w-16 sm:h-12 bg-gray-200 rounded-lg flex-shrink-0 flex items-center justify-center">
                  <svg class="w-4 h-4 sm:w-5 sm:h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1.586a1 1 0 01.707.293l2.414 2.414a1 1 0 00.707.293H15M9 10V9a1 1 0 011-1h4a1 1 0 011 1v1M9 10v5a1 1 0 001 1h4a1 1 0 001-1v-5m-6 0h6"></path>
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <h4 class="text-sm font-medium text-gray-900 truncate"><%= video[:title] %></h4>
                  <p class="text-sm text-gray-500 mt-1"><%= time_ago_in_words(video[:published_at]) %> ago</p>
                  <div class="flex flex-wrap items-center gap-2 sm:gap-4 mt-2">
                    <span class="text-xs text-gray-500"><%= number_with_delimiter(video[:views]) %> views</span>
                    <span class="text-xs text-gray-500"><%= number_with_delimiter(video[:likes]) %> likes</span>
                    <span class="text-xs text-gray-500"><%= number_with_delimiter(video[:comments]) %> comments</span>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
