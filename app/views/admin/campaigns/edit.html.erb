<div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8 lg:py-10">
  <div class="mb-6 sm:mb-8 lg:mb-10">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
      <div class="flex items-center mb-4 sm:mb-0">
        <i data-lucide="edit-3" class="h-6 w-6 sm:h-7 sm:w-7 text-ruby-red mr-2 sm:mr-3"></i>
        <h2 class="text-xl sm:text-2xl lg:text-3xl font-bold text-gray-900">Edit Campaign</h2>
      </div>

      <div class="flex flex-wrap gap-3">
        <%= link_to admin_campaign_path(@campaign), class: "inline-flex items-center text-sm font-medium text-gray-500 hover:text-indigo-600 transition-colors" do %>
          <i data-lucide="eye" class="h-4 w-4 mr-1"></i>
          <span>Preview</span>
        <% end %>

        <%= link_to admin_campaigns_path, class: "inline-flex items-center text-sm font-medium text-gray-500 hover:text-ruby-red transition-colors" do %>
          <i data-lucide="arrow-left" class="h-4 w-4 mr-1"></i>
          <span>Back to campaigns</span>
        <% end %>
      </div>
    </div>

    <div class="mt-2 flex flex-col sm:flex-row sm:items-center text-sm text-gray-600">
      <div class="flex items-center mb-2 sm:mb-0 sm:mr-6">
        <span class="inline-block w-3 h-3 bg-yellow-400 rounded-full mr-2"></span>
        <span>Status: Draft</span>
      </div>

      <div class="flex items-center mb-2 sm:mb-0 sm:mr-6">
        <i data-lucide="calendar" class="h-4 w-4 text-gray-500 mr-1.5"></i>
        <span>Created: <%= @campaign.created_at.strftime("%b %d, %Y") %></span>
      </div>

      <% if @campaign.rsvp_event %>
        <div class="flex items-center">
          <i data-lucide="calendar-check" class="h-4 w-4 text-gray-500 mr-1.5"></i>
          <span>Event: <%= @campaign.rsvp_event.title %></span>
        </div>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 sm:gap-8">
    <!-- Main form column -->
    <div class="lg:col-span-2">
      <div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
        <div class="px-4 py-5 sm:p-6">
          <%= render partial: "form" %>
        </div>
      </div>
    </div>

    <!-- Sidebar column -->
    <div class="lg:col-span-1 space-y-6">
      <!-- Campaign Actions card -->
      <div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-base sm:text-lg font-medium text-gray-900 mb-4">Campaign Actions</h3>

          <div class="space-y-3">
            <button type="button" class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors">
              <i data-lucide="send" class="h-4 w-4 mr-1.5"></i>
              Send Campaign Now
            </button>

            <button type="button" class="w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-ruby-red transition-colors">
              <i data-lucide="mail" class="h-4 w-4 mr-1.5"></i>
              Send Test Email
            </button>

            <button type="button" class="w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-ruby-red transition-colors">
              <i data-lucide="users" class="h-4 w-4 mr-1.5"></i>
              View Recipients
            </button>
          </div>
        </div>
      </div>

      <!-- Campaign Tips card -->
      <div class="bg-blue-50 shadow-sm rounded-lg border border-blue-100 overflow-hidden">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-base font-medium text-blue-800 mb-3 flex items-center">
            <i data-lucide="lightbulb" class="h-5 w-5 mr-2 text-blue-600"></i>
            Editor Tips
          </h3>

          <div class="space-y-3 text-sm text-gray-700">
            <div class="bg-white p-3 rounded border border-blue-100">
              <h4 class="font-medium text-blue-700 mb-1">Markdown Formatting</h4>
              <ul class="space-y-1 pl-5 list-disc">
                <li><code class="text-xs px-1 py-0.5 bg-gray-100 rounded">**bold**</code> for <strong>bold text</strong></li>
                <li><code class="text-xs px-1 py-0.5 bg-gray-100 rounded">*italic*</code> for <em>italic text</em></li>
                <li><code class="text-xs px-1 py-0.5 bg-gray-100 rounded">[text](url)</code> for links</li>
              </ul>
            </div>

            <div class="bg-white p-3 rounded border border-blue-100">
              <h4 class="font-medium text-blue-700 mb-1">Variables</h4>
              <p class="mb-2">Use these variables in your content:</p>
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                <code class="text-xs px-1.5 py-1 bg-gray-100 rounded">{{member.name}}</code>
                <code class="text-xs px-1.5 py-1 bg-gray-100 rounded">{{event.title}}</code>
                <code class="text-xs px-1.5 py-1 bg-gray-100 rounded">{{event.date}}</code>
                <code class="text-xs px-1.5 py-1 bg-gray-100 rounded">{{unsubscribe_link}}</code>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Campaign History card -->
      <div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-base sm:text-lg font-medium text-gray-900 mb-4">Campaign History</h3>

          <ol class="relative border-l border-gray-200 ml-3 space-y-4">
            <li class="mb-4 ml-6">
              <span class="absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -left-3 ring-8 ring-white">
                <i data-lucide="plus" class="w-3 h-3 text-blue-800"></i>
              </span>
              <h4 class="flex items-center text-sm font-semibold text-gray-900">Created campaign</h4>
              <time class="block text-xs font-normal leading-none text-gray-400 mt-1"><%= @campaign.created_at.strftime("%b %d, %Y at %l:%M %p") %></time>
            </li>

            <li class="mb-4 ml-6">
              <span class="absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -left-3 ring-8 ring-white">
                <i data-lucide="edit" class="w-3 h-3 text-blue-800"></i>
              </span>
              <h4 class="flex items-center text-sm font-semibold text-gray-900">Last edited</h4>
              <time class="block text-xs font-normal leading-none text-gray-400 mt-1"><%= @campaign.updated_at.strftime("%b %d, %Y at %l:%M %p") %></time>
            </li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <!-- Danger Zone -->
  <div class="mt-8 sm:mt-10">
    <div class="bg-red-50 shadow-sm rounded-lg border border-red-100 overflow-hidden">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-base sm:text-lg font-medium text-red-800 mb-4 flex items-center">
          <i data-lucide="alert-triangle" class="h-5 w-5 mr-2 text-red-600"></i>
          Danger Zone
        </h3>

        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
          <div class="mb-4 sm:mb-0">
            <p class="text-sm text-gray-700">Permanently delete this campaign and all its data.</p>
            <p class="text-xs text-gray-500 mt-1">This action cannot be undone.</p>
          </div>

          <%= link_to admin_campaign_path(@campaign),
                      data: { turbo_method: :delete, turbo_confirm: "Are you sure? This action cannot be undone." },
                      class: "inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors" do %>
            <i data-lucide="trash-2" class="h-4 w-4 mr-1.5"></i>
            Delete Campaign
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
