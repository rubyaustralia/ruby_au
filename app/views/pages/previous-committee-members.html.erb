<section class="container mx-auto px-4 py-10">
  <h1 class="text-center">Previous Committee Members</h1>
  <div id="committee" class="flex flex-wrap w-6xl m-auto">
    <% previous.each do |member| %>
      <article class="bg-white max-w-xs rounded-lg shadow-lg m-5 flex-shrink-0 flex flex-col">
        <figure class="overflow-hidden max-h-80">
          <%= vite_image_tag "images/committee-members/#{member['photo']}", class: "w-full overflow-hidden rounded-t-lg", alt: "Photo of #{member['name']}" %>
        </figure>
        <header class="px-6 py-4">
          <div class="text-ruby-red font-bold uppercase"><%= member['name'] %></div>
          <div class="font-bold"><%= member['position'] %></div>
        </header>
        <main class="px-6 py-2">
          <%= markdown_to_html member['bio'] %>
        </main>
        <aside class="flex flex-grow flex-col p-3 justify-end">
          <% if member['twitter'] %>
            <span class="bg-grey-lighter rounded-full px-3 py-2 text-sm font-semibold text-grey-darker m-1">
              <%= vite_inline_svg "twitter.svg", width: 24, height: 24, class: "inline" %>
              <%= link_to "@#{ member['twitter']}", "https://twitter.com/#{ member['twitter']}" %>
            </span>
          <% end %>
          <% if member['github'] %>
            <span class="bg-grey-lighter rounded-full px-3 py-2 text-sm font-semibold text-grey-darker m-1">
              <%= vite_inline_svg "github.svg", width: 24, height: 24, class: "inline" %>
              <%= link_to member['github'], "https://github.com/#{ member['github']}", title: 'GitHub' %>
            </span>
          <% end %>
          <% if member['linkedin'] %>
            <span class="bg-grey-lighter rounded-full px-3 py-2 text-sm font-semibold text-grey-darker m-1">
              <%= vite_inline_svg "linkedin.svg", width: 24, height: 24, class: "inline" %>
              <%= link_to "LinkedIn", "https://www.linkedin.com/in/#{member['linkedin']}/" %>
            </span>
          <% end %>
          <% if member['website'] %>
            <span class="bg-grey-lighter rounded-full px-3 py-2 text-sm font-semibold text-grey-darker m-1">
              <%= vite_inline_svg "rss.svg", width: 24, height: 24, class: "inline" %>
              <%= link_to member['website'].gsub(%r{^https?://}, ''), member['website'] %>
            </span>
          <% end %>
        </aside>
      </article>
    <% end %>
  </div>
</section>
