{
  "name": "ruby-au",
  "description": "Ruby Australia website",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ],
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=384",
    "SECRET_KEY_BASE": {
      "generator": "secret"
    }
  },
  "environments": {
    "review": {
      "addons": [
        "heroku-postgresql:essential-0"
      ],
      "scripts": {
        "postdeploy": "bundle exec rails db:prepare"
      }
    }
  }
}